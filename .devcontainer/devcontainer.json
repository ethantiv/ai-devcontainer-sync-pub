{
  "name": "AI Agents Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {}
  },
  "onCreateCommand": {
    "cleanup-ai-dirs": "rm -rf /workspaces/ai-devcontainer-sync/.claude || true",
    "setup-claude-dir": "sudo mkdir -p /home/vscode/.claude/tmp && sudo chown -R vscode:vscode /home/vscode/.claude",
    "setup-gemini-dir": "sudo mkdir -p /home/vscode/.gemini && sudo chown -R vscode:vscode /home/vscode/.gemini",
    "setup-google-auth-dir": "sudo mkdir -p /home/vscode/.cache/google-vscode-extension/auth && sudo chown -R vscode:vscode /home/vscode/.cache/google-vscode-extension",
    "setup-grte-symlink": "sudo mkdir -p /usr/grte/v5/lib && sudo ln -sf /lib/ld-linux-aarch64.so.1 /usr/grte/v5/lib/ld-linux-aarch64.so.1"
  },
  "postCreateCommand": {
    "run-setup": "chmod +x .devcontainer/setup-env.sh && ./.devcontainer/setup-env.sh"
  },
  "mounts": [
    {
      "source": "claude-code-config-${devcontainerId}",
      "target": "/home/vscode/.claude",
      "type": "volume"
    },
    {
      "source": "gemini-cli-config-${devcontainerId}",
      "target": "/home/vscode/.gemini",
      "type": "volume"
    },
    {
      "source": "google-gemini-auth-${devcontainerId}",
      "target": "/home/vscode/.cache/google-vscode-extension/auth",
      "type": "volume"
    },
    {
      "source": "/Users/mirek/Projekty",
      "target": "/home/vscode/projects",
      "type": "bind"
    }
  ],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
    "TMPDIR": "/home/vscode/.claude/tmp",
    "DO_NOT_TRACK": "1",
    "NODE_ENV": "production",
    "PLAYWRIGHT_BROWSERS_PATH": "/home/vscode/.cache/ms-playwright",
    "TZ": "Europe/Warsaw",
    "LC_TIME": "pl_PL.UTF-8"
  },
  "runArgs": [
    "--env-file",
    ".devcontainer/.env"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.colorTheme": "GitHub Dark Default",
        "terminal.integrated.enablePersistentSessions": false,
        "terminal.integrated.cwd": "${workspaceFolder}",
        "terminal.integrated.gpuAcceleration": "off"
      },
      "extensions": [
        "-AmazonWebServices.aws-toolkit-vscode",
        "anthropic.claude-code",
        "bierner.markdown-mermaid",
        "github.github-vscode-themes",
        "github.vscode-github-actions",
        "google.geminicodeassist",
        "hashicorp.terraform",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "redhat.vscode-yaml"
      ]
    },
    "codespaces": {
      "disableAutomaticConfiguration": false
    }
  }
}