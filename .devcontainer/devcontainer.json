{
  "name": "AI Agents Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {}
  },
  "onCreateCommand": {
    "cleanup-ai-dirs": "rm -rf /workspaces/ai-devcontainer-sync/.claude || true",
    "setup-claude-dir": "sudo mkdir -p /home/vscode/.claude && sudo chown -R vscode:vscode /home/vscode/.claude",
    "setup-gemini-dir": "sudo mkdir -p /home/vscode/.gemini && sudo chown -R vscode:vscode /home/vscode/.gemini",
    "setup-google-auth-dir": "sudo mkdir -p /home/vscode/.cache/google-vscode-extension/auth && sudo chown -R vscode:vscode /home/vscode/.cache/google-vscode-extension"
  },
  "postCreateCommand": {
    "install-claude": "curl -fsSL https://claude.ai/install.sh | bash && if [ -f .devcontainer/setup-env.sh ]; then chmod +x .devcontainer/setup-env.sh && ./.devcontainer/setup-env.sh; fi",
    "install-gemini": "sudo npm install -g @google/gemini-cli"
  },
  "mounts": [
    {
      "source": "claude-config-${devcontainerId}",
      "target": "/home/vscode/.claude",
      "type": "volume"
    },
    {
      "source": "gemini-config-${devcontainerId}",
      "target": "/home/vscode/.gemini",
      "type": "volume"
    },
    {
      "source": "gemini-auth-${devcontainerId}",
      "target": "/home/vscode/.cache/google-vscode-extension/auth",
      "type": "volume"
    },
    {
      "source": "/Users/mirek/Projekty",
      "target": "/home/vscode/projects",
      "type": "bind"
    }
  ],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
    "GIT_USER_NAME": "Miros≈Çaw Zaniewicz",
    "GIT_USER_EMAIL": "mirek@example.com",
    "PLAYWRIGHT_MCP_BROWSER": "chromium",
    "PLAYWRIGHT_MCP_VIEWPORT_SIZE": "1920x1080",
    "PLAYWRIGHT_MCP_NO_SANDBOX": "true",
    "TZ": "Europe/Warsaw",
    "LC_TIME": "pl_PL.UTF-8"
  },
  "runArgs": [
    "--env-file",
    ".devcontainer/.env",
    "--shm-size=256m"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.colorTheme": "GitHub Dark Default",
        "terminal.integrated.enablePersistentSessions": false,
        "terminal.integrated.cwd": "${workspaceFolder}",
        "terminal.integrated.gpuAcceleration": "off"
      },
      "extensions": [
        "-AmazonWebServices.aws-toolkit-vscode",
        "anthropic.claude-code",
        "bierner.markdown-mermaid",
        "github.github-vscode-themes",
        "github.vscode-github-actions",
        "google.geminicodeassist",
        "hashicorp.terraform",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "redhat.vscode-yaml"
      ]
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "silent"
  }
}